{
  "install": "pip3 install -r requirements.txt",
  "start": "PYTHONUNBUFFERED=true python3 server.py",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ], 
    "install": {
      "inculude": [
        "^requirements\\.txt$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 2000
  } 
}